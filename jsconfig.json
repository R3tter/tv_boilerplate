{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "core/*": ["core/*"],
      "store/*": ["store/*"],
      "App": ["features/App"],
      "App/*": ["features/App/*"],
      "Common": ["features/Common"],
      "FormComponents": ["features/FormComponents"],
      "Modal": ["features/Modal"],
      "Modal/*": ["features/Modal/*"],
      "images/*": ["images/*"],
      "images/icons/*": ["images/icons/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
